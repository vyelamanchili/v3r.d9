      '#options' => $option_card,
      '#attributes' => [
        'id' => ['no_of_card'],
      ],
    ];
    for ($i = 1; $i <= 5; $i++) {
      $form['banner']['card' . $i] = [
        '#type' => 'fieldset',
        '#title' => 'card ' . $i,
        '#attributes' => [
          'class' => ['card-show'],
          'id' => ['card' . $i],
        ],
      ];

      $form['banner']['card' . $i]['card' . $i . '_icon'] = [
        '#type' => 'textfield',
        '#title' => t('Card Icon'),
        '#default_value' => theme_get_setting('card' . $i . '_icon', 'power_portfolio'),
