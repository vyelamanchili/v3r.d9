            <option value="a.title DESC">JGLOBAL_TITLE_DESC</option>
            <option value="a.tm ASC">COM_CWSOCIALLINKS_FIELD_TM_ORDERING_ASC</option>
            <option value="a.tm DESC">COM_CWSOCIALLINKS_FIELD_TM_ORDERING_DESC</option>
            <option value="a.facebook_comment ASC">COM_CWSOCIALLINKS_FIELD_FC_ORDERING_ASC</option>
            <option value="a.facebook_comment DESC">COM_CWSOCIALLINKS_FIELD_FC_ORDERING_DESC</option>
            <option value="a.facebook_like ASC">COM_CWSOCIALLINKS_FIELD_FL_ORDERING_ASC</option>
            <option value="a.facebook_like DESC">COM_CWSOCIALLINKS_FIELD_FL_ORDERING_DESC</option>
            <option value="a.facebook_share ASC">COM_CWSOCIALLINKS_FIELD_FS_ORDERING_ASC</option>
            <option value="a.facebook_share DESC">COM_CWSOCIALLINKS_FIELD_FS_ORDERING_DESC</option>
            <option value="a.facebook_total ASC">COM_CWSOCIALLINKS_FIELD_FT_ORDERING_ASC</option>
            <option value="a.facebook_total DESC">COM_CWSOCIALLINKS_FIELD_FT_ORDERING_DESC</option>
            <option value="a.google ASC">COM_CWSOCIALLINKS_FIELD_G_ORDERING_ASC</option>
            <option value="a.google DESC">COM_CWSOCIALLINKS_FIELD_G_ORDERING_DESC</option>
            <option value="a.linkedin ASC">COM_CWSOCIALLINKS_FIELD_L_ORDERING_ASC</option>
            <option value="a.linkedin DESC">COM_CWSOCIALLINKS_FIELD_L_ORDERING_DESC</option>
            <option value="a.pinterest ASC">COM_CWSOCIALLINKS_FIELD_P_ORDERING_ASC</option>
            <option value="a.pinterest DESC">COM_CWSOCIALLINKS_FIELD_P_ORDERING_DESC</option>
            <option value="a.reddit ASC">COM_CWSOCIALLINKS_FIELD_R_ORDERING_ASC</option>
            <option value="a.reddit DESC">COM_CWSOCIALLINKS_FIELD_R_ORDERING_DESC</option>
            <option value="a.stumbleupon ASC">COM_CWSOCIALLINKS_FIELD_S_ORDERING_ASC</option>
            <option value="a.stumbleupon DESC">COM_CWSOCIALLINKS_FIELD_S_ORDERING_DESC</option>
        </field>
                
        <field
            name="limit"
            type="limitbox"
            class="inputbox input-mini"
            default="25"
            label="COM_CWSOCIALLINKS_LIST_LIMIT"
            description="COM_CWSOCIALLINKS_LIST_LIMIT_DESC"
            onchange="this.form.submit();"/>
    </fields>
    
</form>