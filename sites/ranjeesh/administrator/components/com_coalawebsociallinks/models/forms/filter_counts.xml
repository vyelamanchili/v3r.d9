<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        
        <field
            name="search"
            type="text"
            label="COM_CWSOCIALLINKS_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"/>
                
        <field
            name="state"
            type="status"
            label="JOPTION_SELECT_PUBLISHED"
            description="JOPTION_SELECT_PUBLISHED_DESC"
            onchange="this.form.submit();">
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
                					
    </fields>
        
    <fields name="list">

        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
