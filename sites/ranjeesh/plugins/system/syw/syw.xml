	<config>
		<fields name="params">
			<fieldset name="basic" addfieldprefix="SYW\Library\Field">
				<field type="extensionversion" extension="plg_system_syw" />
				<field type="extensionauthor" />
				<field type="extensionconnect" />

				<field type="imagelibrarytest" checkall="true" />
				
				<field name="image_library" type="imagelibraryselect" default="gd" 
					label="PLG_SYSTEM_SYW_FIELD_IMAGELIBRARY_LABEL" 
					description="PLG_SYSTEM_SYW_FIELD_IMAGELIBRARY_DESC" />

				<field name="lazy_stylesheets" type="list" default="0" 
					label="PLG_SYSTEM_SYW_FIELD_LAZYLOADSTYLESHEETS_LABEL" 
					description="PLG_SYSTEM_SYW_FIELD_LAZYLOADSTYLESHEETS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
					<option value="2">PLG_SYSTEM_SYW_VALUE_ADDSUPPORT</option>
				</field>

				<field name="webfont_service" type="list" default="google" 
					label="PLG_SYSTEM_SYW_FIELD_WEBFONTSERVICE_LABEL" 
					description="PLG_SYSTEM_SYW_FIELD_WEBFONTSERVICE_DESC">
					<option value="google">fonts.google.com</option>
					<option value="bunny">fonts.bunny.net</option>
				</field>
			</fieldset>
		</fields>
